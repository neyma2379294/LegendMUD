<project name="ReferenceClientText" default="jar" basedir=".">

  <property name="src" location="src;..\ClientAPI\src\;..\Protocol\src\"/>
  <property name="build" location="bin"/>
  <property name="output"  location="build"/>

  <target name="init">
    <mkdir dir="${build}"/>
  </target>

  <target name="compile" depends="init" description="Compile source code." >
    <javac srcdir="${src}" destdir="${build}"/>
  </target>

  <target name="jar" depends="compile" description="Jar the results of compilation." >
    <mkdir dir="${output}"/>
    <jar jarfile="${output}/${ant.project.name}.jar" basedir="${build}">
    	<manifest>
        	<attribute name="Main-Class" value="com.fireforged.legend.client.ReferenceClientText"/>
    	</manifest>
	</jar>
  </target>

  <target name="move" depends="jar" description="Move the jar file to the specified location." >
    <move file="build\ReferenceClientText.jar" todir="F:\Users\Chris\Desktop\LegendMUD"/>
  </target>
    	
  <target name="clean" description="clean up" >
    <delete dir="${build}"/>
  </target>
</project>